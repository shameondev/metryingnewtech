{
  "compilerOptions": {
    // Куда прозводится сборка. Неактуально, потому что использую вебпак
    "outDir": "./dist/",
    // Не позволяет использовать any неявно
    "noImplicitAny": true,
    // Способ модульной сборки
    "module": "ESNext",
    // В какую спецификацию компилируем
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // позволяет работать с пакетами, которые используют common js
    // как с обычними, т.е. использовать import
    "esModuleInterop": true,
    // позовляет не писать * as в импортах
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}